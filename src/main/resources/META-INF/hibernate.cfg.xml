<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-5.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- JDBC connection -->
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.url">jdbc:sqlite:${project.root}/db/mydatabase.db</property>
        <property name="hibernate.dialect">com.example.SQLiteDialect</property>

        <!-- Hibernate settings -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Mapping class -->
        <mapping class="com.example.User"/>
    </session-factory>
</hibernate-configuration>
